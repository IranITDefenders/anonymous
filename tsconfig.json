{
  "compilerOptions": {
    "module": "Node16",
    "lib": ["es6", "dom"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2017",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@constant/*": ["./src/core/constant/*"],
      "@service/*": ["./src/core/service/*"],
      "@interface/*": ["./src/interface/*"],
      "@shared/*": ["./src/shared/*"],
      "@core/*": ["./src/core/*"],
      "@type/*": ["./src/type/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "test"],
  "exclude": ["./node_modules", "./lib"]
}
